{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        // "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 3000
    },
    "ui": {
      "enabled": true,
      "port": 3002
    },
    "singleProjectMode": true,
    "auth": {
      "port": 3003
    },
    "firestore": {
      "port": 3004
    },
    "database": {
      "port": 3005
    },
    "hosting": {
      "port": 3006
    }
  }
}
